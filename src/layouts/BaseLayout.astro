    <!-- Enlazamos nuestro CSS global que está en la carpeta /public -->
    <link rel="stylesheet" href="/css/navbar.css" />
</head>
<body>
    <Navbar />
    <main>
        <!-- El contenido de cada página individual irá aquí -->
        <slot />
    </main>
</body>
</html>